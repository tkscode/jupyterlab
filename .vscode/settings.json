{
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "docker-compose.*": "dockercompose",
        "requirements.*.txt": "pip-requirements"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "volume/**": true
    }
}